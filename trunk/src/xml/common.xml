  <objectinfo class="wxMenu" icon="menu.xpm" type="menu">
    <property name="name" type="text" hidden="1">m_menu</property>
    <property name="label" type="wxString">MyMenu</property>
    <codegen language="C++">
      <template name="declaration">wxMenu *$name;</template>
      <template name="construction">$name = new wxMenu();</template>
      <template name="include">#include &lt;wx/menu.h&gt;</template>
      <template name="menu_add">#parent $name->Append($name, $label);</template>
    </codegen>
  </objectinfo>
  <objectinfo class="submenu" icon="menu.xpm" type="submenu">
    <property name="name" type="text" hidden="1">m_menu</property>
    <property name="label" type="wxString">MyMenu</property>
