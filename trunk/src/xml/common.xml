      <template name="declaration">wxMenu *$name;</template>
      <template name="construction">$name = new wxMenu();</template>
      <template name="include">#include &lt;wx/menu.h&gt;</template>
      <template name="menu_add">#parent $name->Append(-1, $label, $name);</template>
    </codegen>
  </objectinfo>
  <objectinfo class="wxMenuItem" icon="menuitem.xpm" type="menuitem">
    <property name="name" type="text" hidden="1">menuItem</property>
    <property name="label" type="wxString">MyMenuItem</property>
    <property name="shortcut" type="wxString"></property>
    <property name="help" type="wxString"></property>
    <property name="id" type="macro" hidden="1">ID_DEFAULT</property>
    <property name="bitmap" type="bitmap" />
    <!--<property name="checked" type="bool">0</property>
    <property name="enabled" type="bool">1</property>-->
    <property name="kind" type="option">
      <option name="wxITEM_NORMAL" />
      <option name="wxITEM_CHECK" />
      <option name="wxITEM_RADIO" />wxITEM_NORMAL</property>
    <codegen language="C++">
      <template name="construction">wxMenuItem *$name = new wxMenuItem(#parent $name, $id, $label #ifnotnull $shortcut @{ + wxT('\t') + $shortcut @}, $help, $kind);</template>
      <template name="settings">
        #ifnotnull $bitmap
        @{ $name->SetBitmap($bitmap); @}
      </template>
      <template name="menuitem_add">#parent $name->Append($name);</template>	
      <template name="include">#include &lt;wx/menu.h&gt;</template>
    </codegen>
  </objectinfo>
  <objectinfo class="separator" icon="menuitem.xpm" type="menuitem">
    <codegen language="C++">
      <template name="construction"></template>
      <template name="settings"></template>
      <template name="menuitem_add">#parent $name->AppendSeparator();</template>
      <template name="include">#include &lt;wx/menu.h&gt;</template>
    </codegen>
