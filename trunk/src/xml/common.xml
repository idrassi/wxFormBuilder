  <objectinfo class="wxMenuBar" icon="menubar.xpm" type="menubar">
    <inherits class="wxWindow" />
    <property name="name" type="text" hidden="1">m_menubar</property>
    <property name="label" type="wxString">MyMenuBar</property>
    <codegen language="C++">
      <template name="declaration">wxMenuBar *$name;</template>
      <template name="construction">$name = new wxMenuBar($style);</template>
      <template name="include">#include &lt;wx/menu.h&gt;</template>
      <template name="menubar_add">#wxparent $name->SetMenuBar($name);</template>
